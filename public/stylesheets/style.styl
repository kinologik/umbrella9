global-reset()
reset-html5()

$cloudy-blue = #49A8FA
$light-text = #F1F1FF
$darker-blue = darken($cloudy-blue, 30%)
$widget-grey = #d0d0d4
$widget-black = #000010
$nothing-grey = #a4a0a0

body
    background-color $cloudy-blue
    color $light-text
    overflow hidden

h1
    font-size 300%

h2
    font-size 250%

h3
    font-size 200%

h4
    font-size 150%

.flash-info,
.flash-error
    margin 10px
    padding 5px 10px
    border-radius 3px

.flash-info
    background-color $darker-blue

.flash-error
    background-color #b02020

div#tabs
    background-color $widget-grey
    height 21px

    a.tab,
    a.active
        display inline-block
        text-decoration none
        padding 2px 3px
        margin 3px 5px
        border-radius top 3px

    a.tab
        color $darker-blue

    a.active
        background-color $cloudy-blue
        color $light-text
        cursor default

.wrapper
    position absolute
    top 23px
    left 0
    right 0
    bottom 0

iframe.project-window
    absolute top left
    width 100%
    height 100%
    background-color $nothing-grey
    cursor default

.project-ui
    margin 20px
    padding 10px
    min-height 300px
    background-color $widget-grey
    color $widget-black
    border-radius 3px

    p
        margin 3px 0
